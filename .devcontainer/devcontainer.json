{
	"name": "Ask Network",
	"dockerFile": "Dockerfile",
	"extensions": [
		"rust-lang.rust-analyzer",
		"serayuzgur.crates",
		"vadimcn.vscode-lldb"
	],
	"mounts": [
		// run from /Ask.Network/solana afer creation: cp /root/.config/solana/asknetwork-program.json ./target/deploy/ask_network-keypair.json
		"type=bind,source=${localEnv:HOME}${localEnv:USERPROFILE}/.config/solana/asknetwork-program2.json,target=/root/.config/solana/asknetwork-program.json,readonly",
		"type=bind,source=${localEnv:HOME}${localEnv:USERPROFILE}/.config/solana/asknetwork-deploy.json,target=/root/.config/solana/asknetwork-deploy.json,readonly"
	],
	"postCreateCommand": "solana config set --keypair /root/.config/solana/asknetwork-deploy.json && solana config set --url https://api.devnet.solana.com",
	"settings": {
		"editor.formatOnSave": true,
		"terminal.integrated.shell.linux": "/usr/bin/zsh",
		"files.exclude": {
			"**/CODE_OF_CONDUCT.md": true,
			"**/LICENSE": true
		}
	}
}